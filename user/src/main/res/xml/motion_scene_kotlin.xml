<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1500"
        motion:motionInterpolator="easeInOut">

        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorId="@+id/iv"
            motion:touchAnchorSide="bottom" />

        <OnClick
            motion:clickAction="toggle"
            motion:targetId="@id/iv" />

        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="25"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/iv"
                motion:pathMotionArc="startVertical"
                motion:percentX="0.25"
                motion:percentY="-0.25"
                motion:transitionEasing="accelerate" />

            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/iv"
                motion:pathMotionArc="flip"
                motion:percentX="0.5"
                motion:percentY="0.0"
                motion:transitionEasing="accelerate" />

            <KeyPosition
                motion:framePosition="75"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/iv"
                motion:pathMotionArc="startVertical"
                motion:percentX="0.75"
                motion:percentY="0.25"
                motion:transitionEasing="accelerate" />

            <!--<KeyCycle-->
            <!--app:curveFit="spline"-->
            <!--app:framePosition="50"-->
            <!--app:motionTarget="@id/iv"-->
            <!--app:waveOffset="0"-->
            <!--app:wavePeriod="1"-->
            <!--app:waveShape="triangle"-->
            <!--app:waveVariesBy="path" />-->

            <KeyAttribute
                android:scaleX="2"
                android:scaleY="2"
                motion:framePosition="25"
                motion:motionTarget="@id/iv"
                motion:transitionEasing="accelerate" />

            <KeyAttribute
                android:rotation="-90"
                android:scaleX="0.5"
                android:scaleY="0.5"
                motion:framePosition="50"
                motion:motionTarget="@id/iv"
                motion:transitionEasing="accelerate" />

            <KeyAttribute
                android:scaleX="2"
                android:scaleY="2"
                motion:framePosition="75"
                motion:motionTarget="@id/iv"
                motion:transitionEasing="accelerate" />

            <KeyPosition
                motion:framePosition="25"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/iv2"
                motion:pathMotionArc="startVertical"
                motion:percentX="0.25"
                motion:percentY="0.25"
                motion:transitionEasing="decelerate" />

            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/iv2"
                motion:pathMotionArc="flip"
                motion:percentX="0.5"
                motion:percentY="0.0"
                motion:transitionEasing="decelerate" />

            <KeyPosition
                motion:framePosition="75"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/iv2"
                motion:pathMotionArc="startVertical"
                motion:percentX="0.75"
                motion:percentY="-0.25"
                motion:transitionEasing="decelerate" />

            <!--<KeyCycle-->
            <!--app:curveFit="spline"-->
            <!--app:framePosition="50"-->
            <!--app:motionTarget="@id/iv2"-->
            <!--app:waveOffset="0"-->
            <!--app:wavePeriod="1"-->
            <!--app:waveShape="triangle"-->
            <!--app:waveVariesBy="path" />-->

            <KeyAttribute
                android:scaleX="2"
                android:scaleY="2"
                motion:framePosition="25"
                motion:motionTarget="@id/iv2"
                motion:transitionEasing="decelerate" />


            <KeyAttribute
                android:rotation="-90"
                android:scaleX="0.5"
                android:scaleY="0.5"
                motion:framePosition="50"
                motion:motionTarget="@id/iv2"
                motion:transitionEasing="decelerate" />

            <KeyAttribute
                android:scaleX="2"
                android:scaleY="2"
                motion:framePosition="75"
                motion:motionTarget="@id/iv2"
                motion:transitionEasing="decelerate" />

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/dp_30"
            android:rotation="0"
            app:layout_constraintEnd_toEndOf="parent"
            motion:drawPath="pathRelative"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:pathMotionArc="startHorizontal">
            <!--<CustomAttribute-->
                <!--app:attributeName="backgroundColor"-->
                <!--app:customColorValue="@color/orangeColor" />-->
            <!--<CustomAttribute-->
            <!--motion:attributeName="warmth"-->
            <!--motion:customFloatValue="1" />-->
            <!--<CustomAttribute-->
            <!--motion:attributeName="contrast"-->
            <!--motion:customFloatValue="1" />-->
            <CustomAttribute
                motion:attributeName="saturation"
                motion:customFloatValue="1" />
        </Constraint>

        <Constraint
            android:id="@+id/iv2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/dp_30"
            android:rotation="-180"
            app:layout_constraintStart_toStartOf="parent"
            motion:drawPath="pathRelative"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:pathMotionArc="startHorizontal">
            <!--<CustomAttribute-->
                <!--app:attributeName="backgroundColor"-->
                <!--app:customColorValue="@color/gray" />-->
            <!--<CustomAttribute-->
            <!--motion:attributeName="warmth"-->
            <!--motion:customFloatValue="0" />-->
            <!--<CustomAttribute-->
            <!--motion:attributeName="contrast"-->
            <!--motion:customFloatValue="0" />-->
            <CustomAttribute
                motion:attributeName="saturation"
                motion:customFloatValue="0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/dp_30"
            android:rotation="-180"
            app:layout_constraintStart_toStartOf="parent"
            motion:drawPath="pathRelative"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:pathMotionArc="startVertical">
            <!--<CustomAttribute-->
                <!--app:attributeName="backgroundColor"-->
                <!--app:customColorValue="@color/gray" />-->
            <!--<CustomAttribute-->
            <!--motion:attributeName="warmth"-->
            <!--motion:customFloatValue="0" />-->
            <!--<CustomAttribute-->
            <!--motion:attributeName="contrast"-->
            <!--motion:customFloatValue="0" />-->
            <CustomAttribute
                motion:attributeName="saturation"
                motion:customFloatValue="0" />
        </Constraint>

        <Constraint
            android:id="@+id/iv2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/dp_30"
            android:rotation="0"
            app:layout_constraintEnd_toEndOf="parent"
            motion:drawPath="pathRelative"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:pathMotionArc="startHorizontal">
            <!--<CustomAttribute-->
                <!--app:attributeName="backgroundColor"-->
                <!--app:customColorValue="@color/orangeColor" />-->
            <!--<CustomAttribute-->
            <!--motion:attributeName="warmth"-->
            <!--motion:customFloatValue="1" />-->
            <!--<CustomAttribute-->
            <!--motion:attributeName="contrast"-->
            <!--motion:customFloatValue="1" />-->
            <CustomAttribute
                motion:attributeName="saturation"
                motion:customFloatValue="1" />
        </Constraint>
    </ConstraintSet>
</MotionScene>